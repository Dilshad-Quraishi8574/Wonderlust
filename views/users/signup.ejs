<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3 mt-2 mb-2">Signup on wonderlust</h1>
<div class="col-6 offset-3">
<form action="/signup" method="POST" class="needs-validation" novalidate>

    <div class="mb-3">
        <label for="username">Username:</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Username are Requuired</div>
        <div class="valid-feedback">Username are success</div>
      </div>
      <!-- Email -->
      <div class="mb-3">
        <label for="email">Email:</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Email are Requuired</div>
        <div class="valid-feedback">Email are success</div>
      </div>
      <!-- Password -->
      <div class="mb-3">
        <label for="password">Password:</label>
        <input
          type="text"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Username are Requuired</div>
        <div class="valid-feedback">Username are success</div>
      </div>
<button class="btn btn-success">Signup</button>
</form>
</div>
</div>