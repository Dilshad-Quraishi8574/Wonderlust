<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3 mt-2 mb-2">Login</h1>
<div class="col-6 offset-3">
<form action="/login" method="POST" class="needs-validation" novalidate>

    <div class="mb-3">
        <label for="username">Username:</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required />
      
      </div>
  

      <!-- Password -->
      <div class="mb-3">
        <label for="password">Password:</label>
        <input
          type="text"
          name="password"
          id="password"
          class="form-control"
          required
        />
     
      </div>
<button class="btn btn-success">Login</button>
</form>
</div>
</div>