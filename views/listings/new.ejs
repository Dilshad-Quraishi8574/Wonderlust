    >

  
 </textarea
    > -->
    <input type="text"
     class="form-control" 
     name="listing[description]" 
     
     >
    <div class="invalid-feedback">Description are required!</div>
  </div>
  <!-- <div class="mb-3">
    <label for=""> image:</label>
    <input
      type="text"
      name="listing[image]"
      id=""
      class="form-control"
     
    />
    <div class="invalid-feedback">image are required</div>
  </div> -->
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
  (Image Upload Through file select) -->

  <div class="mb-3">
    <label for="">Upload Listing Image</label>
    <input
      type="file"
      name="listing[image]"
      id=""
      class="form-control"
     required
    />
    <div class="invalid-feedback">File are required</div>
  </div>

  <div class="mb-3">
    <label for="">Price</label>
    <input
      type="text"
      name="listing[price]"
      id=""
      required
      class="form-control"
   
    />
    <div class="invalid-feedback">price are required</div>
  </div>
  <div class="mb-3">
    <label for="">Location</label>
    <input
      type="text"
      name="listing[location]"
      id=""
      required
      class="form-control"
     
    />
    <div class="invalid-feedback">Location are required</div>
  </div>
  <div class="mb-3">
    <label for="">Country</label>
    <input
      type="text"
      name="listing[country]"
      id=""
      required
      class="form-control"
    
    />
    <div class="invalid-feedback">country are required!</div>
  </div>
  <button class="btn btn-primary edit-btn" type="submit">Add</button>
