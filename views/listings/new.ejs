<% layout("/layouts/boilerplate") %>
<div class="col-7 offset-3 mt-3">
<h2>Create detail</h2>
<form
  method="POST"
  class="needs-validation"
  action="/listings"
  novalidate
  enctype="multipart/form-data"
>
  <div class="mb-3">
    <label for="">Title:</label>
    <input
      type="text"
      name="listing[title]"
      id=""
      class="form-control"
     
      required
    />
    <div class="invalid-feedback">Title are Requuired</div>
    <div class="valid-feedback">Title are success</div>
  </div>
  <div class="mb-3">
    <label for="">Description:</label><br />
    <!-- <textarea
      name="listing[description]"
      class="form-control"
