<% layout("layouts/boilerplate") %>
<div class="col-7 offset-3">
<h2>Edit detail</h2>

<form
  method="POST"
  class="needs-validation"
  action="/listings/<%=listing._id%>?_method=PUT"
  novalidate
  enctype="multipart/form-data"
>
  <div class="mb-3">
    <label for="">Title:</label>
    <input
      type="text"
      name="listing[title]"
      id=""
      class="form-control"
      value="<%=listing.title%>"
      required
    />
    <div class="invalid-feedback">Title are Requuired</div>
    <div class="valid-feedback">Title are success</div>
  </div>
  <div class="mb-3">
    <label for="">Description:</label><br />
    <input type="text"
    class="form-control" 
    value="<%=listing.description%>"
    name="listing[description]" 
    
    >
  <div class="invalid-feedback">Discription are Requuired</div>
  <div class="valid-feedback">Discription are success</div>
</div>
